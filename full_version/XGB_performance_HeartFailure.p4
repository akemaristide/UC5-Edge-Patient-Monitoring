    }

    @pragma stage 1
    table lookup_leaf_id1 {
        key = { meta.code_f0[7:4]:exact;
                meta.code_f1[7:4]:exact;
                meta.code_f2[5:3]:exact;
                meta.code_f3[5:3]:exact;
                meta.code_f4[5:3]:exact;
                meta.code_f5[5:3]:exact;
                }
        actions={
            read_prob1;
